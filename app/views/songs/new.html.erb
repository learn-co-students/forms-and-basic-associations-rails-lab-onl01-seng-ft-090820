<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :artist %><br>
  <%= f.text_field :artist_name %>
  <br><br>
  <%= f.label :genre %> <br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>
  <%= f.label :notes %><br>
  <input name="song[note_contents][]" id="song_notes_1" placeholder="First Note">
  <input name="song[note_contents][]" id="song_notes_2" placeholder="Second Note">
  <input name="song[note_contents][]" id="song_notes_3" placeholder="Third Note">
  <br><br>
  <%= f.submit %>
<% end %>


